{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Send (Hub Menu)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/selector.py",
            "args": ["--hub", "Pybricks Hub"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        },
